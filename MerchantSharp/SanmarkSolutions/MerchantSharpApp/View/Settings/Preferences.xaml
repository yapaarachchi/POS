<Window x:Class="MerchantSharp.SanmarkSolutions.MerchantSharpApp.View.Settings.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences" Height="550" Width="930" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize" KeyUp="Window_KeyUp">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Width="900" Height="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="listBox" SelectionChanged="listBox_SelectionChanged"/>
            <GroupBox Grid.Column="1">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="grid_content" Margin="5">
                        
                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</Window>
